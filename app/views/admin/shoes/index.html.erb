<h1>Listing shoes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Company</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shoes.each do |shoe| %>
      <tr>
        <td><%= shoe.name %></td>
        <td><%= shoe.category_id %></td>
        <td><%= shoe.company_id %></td>
        <td><%= shoe.description %></td>
        <td><%= shoe.price %></td>
        <td><%= link_to 'Show', admin_shoe_path(shoe) %></td>
        <td><%= link_to 'Edit', edit_admin_shoe_path(shoe) %></td>
        <td><%= link_to 'Destroy', admin_shoe_path(shoe), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

